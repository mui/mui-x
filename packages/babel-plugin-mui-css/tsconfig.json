{
  "compilerOptions": {
    "target": "es6",
    "module": "ES2022",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "declaration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["test/**/*", "node_modules"]
}
