{
  "compilerOptions": {
    "allowJs": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "jsx": "react",
    "module": "es2022",
    "noEmit": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
