{
  "compilerOptions": {
    "allowJs": true,
    "isolatedModules": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2020",
    "noEmit": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["node"],
    "noImplicitAny": false
  },
  "include": ["**/*.*"],
  "exclude": ["node_modules"]
}
