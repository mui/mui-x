{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "isolatedModules": true,
    /* files are emitted by babel */
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "incremental": true
  },
  "include": [
    "pages/**/*.ts*",
    "data/**/*",
    "src/modules/components/**/*",
    "next.config.mjs",
    "docs-env.d.ts"
  ],
  "exclude": ["docs/.next", "docs/export", "pages/playground"]
}
