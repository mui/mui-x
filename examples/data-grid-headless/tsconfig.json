{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "paths": {
      "@mui/x-data-grid-headless": ["../../packages/x-data-grid-headless/src"],
      "@mui/x-data-grid-headless/*": ["../../packages/x-data-grid-headless/src/*"],
      "@mui/x-data-grid-headless-pro": ["../../packages/x-data-grid-headless-pro/src"],
      "@mui/x-data-grid-headless-pro/*": ["../../packages/x-data-grid-headless-pro/src/*"],
      "@mui/x-data-grid-headless-premium": ["../../packages/x-data-grid-headless-premium/src"],
      "@mui/x-data-grid-headless-premium/*": ["../../packages/x-data-grid-headless-premium/src/*"],
      "@mui/x-virtualizer": ["../../packages/x-virtualizer/src"],
      "@mui/x-virtualizer/*": ["../../packages/x-virtualizer/src/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
